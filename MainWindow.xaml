            <Button x:Name="chill" Width="100" Height="100" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Padding="0 0 0 0" Margin="532,57,212,57" Click="chill_Click" Grid.RowSpan="3">
                <Image Source="D:\Rayreth app\rayreth_app\rayreth app\img\icons8-kawaii-soda-100.png" Width="88" Height="88"/>
            </Button>
            <Button x:Name="more" Width="100" Height="100" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Padding="0 0 0 0" Margin="658,59,86,55" Click="More_Click" Grid.RowSpan="3">
                <Image Source="D:\Rayreth app\rayreth_app\rayreth app\img\icons8-more-100.png" RenderTransformOrigin="0.693,-0.346" Height="88" Width="88"/>
