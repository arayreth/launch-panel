            <Button x:Name="codestudio" Width="100" Height="100" Background="Transparent" BorderBrush="Transparent"  Cursor="Hand" Padding="0 0 0 0"  Margin="403,59,341,55" Click="codestudio_Click" Grid.RowSpan="3">
